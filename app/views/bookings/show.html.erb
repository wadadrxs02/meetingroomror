<div class="card mx-auto" style="max-width: 80rem;">
  <div class="card-header">
    <h1 class="text-center mb-4">Booking Details </h1>
  </div>
  <div class="col-xl-5 col-md-6 my-4 mx-auto">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div>
              <h5 class="text-primary mb-1">Title:
                <span style="color: #5a5c69" > <%=  @booking.title %></span></h5>
            </div>
            <div >
              <h5 class="text-primary mb-1"> Meeting Room:
                <span style="color: #5a5c69"> <%= @booking.meetingroom_name %></span></h5>
            </div>
            <div >
              <h5 class="text-primary mb-1"> Booking Date:
                <span style="color: #5a5c69"> <%= local_time(@booking.start_time, format: '%e/%m/%Y') %></span></h5>
            </div>
            <div>
              <h5 class="text-primary mb-1">Time:
                <span style="color: #5a5c69" > <%= local_time(@booking.start_time, format: '%l:%M %P') %> - <%= local_time(@booking.end_time, format: '%l:%M %P') %></span></h5>
            </div>
            <div>
              <h5 class="text-primary mb-1">Pax:
                <span style="color: #5a5c69" > <%=  @booking.pax %></span></h5>
            </div>
            <div >
              <h5 class="text-primary mb-1"> Booking Person:
                <span style="color: #5a5c69"> <%= @booking.admin_name %></span></h5>
            </div>
          </div>
          <div class="col-auto">
            <% link_to 'Delete', @booking, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger text-danger' %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <%= link_to 'Edit', edit_booking_path(@booking), class:"btn btn-info btn-lg text-white"  %>
    <%= link_to 'Back', '/', class:"btn btn-danger text-white btn-lg"   %>
  </div>
</div>
