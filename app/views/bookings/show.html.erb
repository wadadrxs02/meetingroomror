<% content_for(:title) do %>
  View Booking
<% end %>
<div class="card mx-auto" style="width:98rem">
  <div class="card-header">
    <h3 class="text-center">Booking Details </h3>
  </div>
  <div class="col-xl-5 col-md-6 my-4 mx-auto">
    <div class="card border-left-primary shadow h-100">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col">
            <div>
              <div>
                <h5 class="text-primary mb-1"> Meeting Room:
                  <span style="color: #5a5c69"> <%= @booking.meetingroom_name %></span></h5>
              </div>
              <div>
                <h5 class="text-primary mb-1">Pax:
                  <span style="color: #5a5c69" > <%=  @booking.pax %></span></h5>
              </div>
              <h5 class="text-primary mb-1">Remarks:
                <span style="color: #5a5c69" > <%=  @booking.title %></span></h5>
            </div>
            <div >
              <h5 class="text-primary mb-1"> Booking Date:
                <span style="color: #5a5c69"> <%= local_time(@booking.start_time, format: '%e/%m/%Y') %> - <%= local_time(@booking.end_time, format: '%e/%m/%Y') %></span></h5>
            </div>
            <div>
              <h5 class="text-primary mb-1">Booking Time:
                <span style="color: #5a5c69" > <%= local_time(@booking.start_time, format: '%l:%M %P') %> - <%= local_time(@booking.end_time, format: '%l:%M %P') %></span></h5>
            </div>
            <div >
              <h5 class="text-primary mb-1"> Booking Person:
                <span style="color: #5a5c69"> <%= @booking.user_name %></span></h5>
            </div>
            <div >
              <h5 class="text-primary mb-1"> Status:
                <div class="badge badge-lg badge-rounded bg-<%= booking_status_color(@booking) %>">
                  <%= @booking.status %> </span>
              </div>
            </div>
            <div class="col-auto">
            </div>
            <div class=" form-actions text-left float-end py-2">
              <%# <%= link_to 'Update', edit_booking_path(@booking), class:"btn btn-info btn-sm text-white"  %>
              <%= link_to 'Back', bookings_path, class:"btn btn-warning text-white"  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
