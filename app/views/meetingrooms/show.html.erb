<div class="card mx-auto" style="width:80rem">
  <div class="card-body ">
    <div class="tabs">
      <div class="tab-2">
        <label for="tab2-1">AVAILIBILITY </label>
        <input id="tab2-1" name="tabs-two" type="radio" checked="checked">
        <div>
          <h1 class="text-center mb-4">Meeting Room Availibity</h1>
          <div class=" mb-4 mx-auto">
            <div class="card border-left-primary shadow h-100 py-2 " >
              <div class="card-body">
                <div class="left col-xl-5 line  pb-0 m-2" >
                  <h4 class="ok">
                    <img src="/assets/meeting-room.png" style="width: 3rem"> :
                    <span style="color: #5a5c69">
                      <%= link_to @meetingroom.name, edit_meetingroom_path(@meetingroom) %>
                    </span>
                    <i class="fas fa-users"></i> :
                    <span style="color: #5a5c69">
                      <%= @meetingroom.capacity %>
                    </span>
                  </h4>
                </div>
                <% if @bookings %>
                  <%= month_calendar(events: @bookings) do |date, bookings| %>
                    <span class="date-str">
                      <%= date.day %>
                    </span>
                    <% bookings.each do |booking| %>
                      <div> &#8226;
                        <%= link_to booking.title, booking %> -
                        <%= link_to readable_time(booking.start_time) %>
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-2">
        <label for="tab2-2">BOOKING</label>
        <input id="tab2-2" name="tabs-two" type="radio">
        <div>
          <%= render '/bookings/index' %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  function reloadIt() {
      if (window.location.href.substr(-2) !== "?r") {
          window.location = window.location.href + "?r";
      }
  }
  setTimeout('reloadIt()', 1000)();
</script>
